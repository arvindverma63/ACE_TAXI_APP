<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Ride Date and Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/textViewRideDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: 24 Dec 2024"
                style="@style/TextColor"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewRideTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time: 12:30 PM"
                style="@style/TextColor"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginBottom="8dp" />

        <!-- Ride Pickup and Drop Details -->

        <TextView
            android:id="@+id/textViewPickupLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_pickup"
            android:drawablePadding="8dp"
            android:paddingBottom="4dp"
            style="@style/TextColor"
            android:text="Pickup: 123 Main Street"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewDropLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Drop: 456 Elm Street"
            android:textSize="14sp"
            style="@style/iconColor"
            android:drawableLeft="@drawable/ic_location_red"
            android:drawablePadding="8dp" />

        <!-- Separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginVertical="8dp" />

        <!-- Ride Fare -->
        <TextView
            android:id="@+id/textViewFare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fare: Â£150.00"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="end" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
