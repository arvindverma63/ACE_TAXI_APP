<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    style="@style/PrimaryBg"
    android:layout_height="wrap_content">



        <!-- Profile Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp"
        tools:ignore="UselessParent">

        <TextView
            style="@style/TextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="You have been acllocated a booking on the dairy" />

        <!-- Name -->
        <TextView
            android:id="@+id/user_name"
            style="@style/TextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Customer Name"
            android:textSize="22sp" />

        <!-- Bio/Description -->
        <TextView
            android:id="@+id/user_bio"
            style="@style/TextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Customer Location"
            android:textSize="14sp" />

        <!-- User Experience -->
        <TextView
            android:id="@+id/user_experience"
            style="@style/TextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Destination Path"
            android:textSize="14sp" />

        <!-- CardView for additional profile details -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:outlineSpotShadowColor="@color/none"
            app:cardCornerRadius="16dp"
            style="@style/PrimaryBg"
            app:strokeWidth="2dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="26dp">

                <TextView
                    style="@style/TextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ride Info"
                    android:textSize="18sp" />

                <TextView
                    style="@style/TextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Email: arvind.@example.com" />

                <TextView
                    style="@style/TextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Phone: +123 456 7890" />

                <TextView
                    style="@style/TextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Fare: Â£150.00" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Edit and Logout Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <!-- Edit Profile Button -->
            <Button
                android:id="@+id/edit_profile_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:backgroundTint="@color/black"

                android:text="Accept"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/reject_booking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:backgroundTint="@color/black"
                android:text="Reject"
                android:textColor="@color/white" />

            <!-- Logout Button -->
            <Button
                android:id="@+id/navigate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:background="@drawable/nav_gredient"
                android:drawableEnd="@drawable/ic_map"
                android:drawablePadding="0dp"
                android:text="Nav"
                android:textColor="@color/white" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>